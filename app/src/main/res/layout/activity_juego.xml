<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor_fragment_resultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient_background"
    android:orientation="vertical">

    <com.ejercicios.fdegregorio.musicapp.view.QuizViewPager
        android:id="@+id/quizViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lytPuntaje">

    </com.ejercicios.fdegregorio.musicapp.view.QuizViewPager>

    <LinearLayout
        android:id="@+id/lytPuntaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="100">

        <TextView
            android:id="@+id/txtPagina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:text="1/10"/>

        <TextView
            android:id="@+id/txtPuntaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="50dp"
            android:text="0 pts"
            />
    </LinearLayout>

</RelativeLayout>